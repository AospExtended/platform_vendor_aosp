<resources>

    <!-- The background color of the notification shade -->
    <color name="notification_shade_background_color">@*android:color/primary_device_default_dark</color>

    <!-- The color of the dividing line between grouped notifications while . -->
    <color name="notification_divider_color">@*android:color/tertiary_device_default_dark</color>

    <!-- The color of the background in the top part of QSCustomizer -->
    <color name="qs_customize_background">@*android:color/primary_device_default_dark</color>

    <!-- The color of the background in the bottom part of QSCustomizer -->
    <color name="qs_customize_decoration">@*android:color/primary_device_default_dark</color>

    <!-- Biometric dialog colors -->
    <color name="biometric_dialog_accent">@*android:color/accent_device_default_dark</color>

    <!-- Notification guts -->
    <color name="notification_guts_bg_color">@*android:color/primary_device_default_dark</color>
    <color name="notification_guts_info_button_color">@*android:color/accent_device_default_light</color>
    <color name="notification_guts_priority_button_content_color_selected">@*android:color/accent_device_default_light</color>
    <color name="notification_guts_priority_button_bg_stroke_color_selected">@*android:color/accent_device_default_light</color>
    <color name="notification_guts_priority_button_bg_fill_color_selected">@*android:color/secondary_device_default_dark</color>

    <!-- The color of the background in the separated list of the Global Actions menu -->
    <color name="global_actions_separated_background">@*android:color/primary_device_default_dark</color>

    <!-- The color of the background in the grid of the Global Actions menu -->
    <color name="global_actions_grid_background">@*android:color/primary_device_default_dark</color>
</resources>
